<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5">

    <!-- Mapa -->
    <androidx.fragment.app.FragmentContainerView
        android:id="@+id/mapView"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/cardEstado"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- Tarjeta inferior con estado y botón -->
    <androidx.cardview.widget.CardView
        android:id="@+id/cardEstado"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:cardCornerRadius="16dp"
        app:cardElevation="8dp"
        app:cardBackgroundColor="@color/white"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <!-- Estado de la ruta -->
            <TextView
                android:id="@+id/tvEstadoRuta"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ruta no iniciada"
                android:textSize="16sp"
                android:textStyle="bold"
                android:textColor="@color/black"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Parada actual -->
            <TextView
                android:id="@+id/tvParadaActual"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Próxima parada: --"
                android:textSize="14sp"
                android:textColor="@color/gray_hint"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvEstadoRuta"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Paradas completadas -->
            <TextView
                android:id="@+id/tvParadasCompletadas"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0/5 paradas completadas"
                android:textSize="14sp"
                android:textColor="@color/teal_primary"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@id/tvParadaActual"
                app:layout_constraintStart_toStartOf="parent"/>

            <!-- Botón iniciar/terminar ruta -->
            <Button
                android:id="@+id/btnIniciarRuta"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="Iniciar Ruta"
                android:textColor="@color/white"
                android:background="@drawable/button_background"
                android:backgroundTint="@null"
                android:layout_marginTop="16dp"
                app:layout_constraintTop_toBottomOf="@id/tvParadasCompletadas"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"/>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>