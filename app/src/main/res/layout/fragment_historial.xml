<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:padding="16dp">

    <!-- Indicador de viajes tomados hoy -->
    <LinearLayout
        android:id="@+id/layoutViajesHoy"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@color/teal_light"
        android:padding="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <ImageView
            android:layout_width="18dp"
            android:layout_height="18dp"
            android:src="@android:drawable/ic_dialog_info"
            android:contentDescription="Info"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Viajes tomados hoy"
            android:textSize="14sp"
            android:textColor="@color/black"
            android:layout_marginStart="8dp"/>

    </LinearLayout>

    <!-- Lista de recorridos -->
    <ScrollView
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/layoutViajesHoy"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="12dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!-- Recorrido 1 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRecorrido1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvRecorrido1Titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recorrido 1"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvRecorrido1Km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1.7"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/tvRecorrido1Titulo"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/km"
                        android:textSize="12sp"
                        android:textColor="@color/gray_hint"
                        app:layout_constraintBottom_toBottomOf="@id/tvRecorrido1Km"
                        app:layout_constraintStart_toEndOf="@id/tvRecorrido1Km"/>

                    <!-- Separador -->
                    <View
                        android:id="@+id/divider1"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/teal_light"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvRecorrido1Km"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="costo: ??"
                        android:textSize="12sp"
                        android:textColor="@color/gray_hint"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="combustible: ??"
                        android:textSize="12sp"
                        android:textColor="@color/gray_hint"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/divider1"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <!-- Recorrido 2 -->
            <androidx.cardview.widget.CardView
                android:id="@+id/cardRecorrido2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="12dp"
                app:cardCornerRadius="12dp"
                app:cardBackgroundColor="@color/white"
                app:cardElevation="2dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="16dp">

                    <TextView
                        android:id="@+id/tvRecorrido2Titulo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Recorrido 2"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toTopOf="parent"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:id="@+id/tvRecorrido2Km"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0.7"
                        android:textSize="40sp"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        app:layout_constraintTop_toBottomOf="@id/tvRecorrido2Titulo"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="/km"
                        android:textSize="12sp"
                        android:textColor="@color/gray_hint"
                        app:layout_constraintBottom_toBottomOf="@id/tvRecorrido2Km"
                        app:layout_constraintStart_toEndOf="@id/tvRecorrido2Km"/>

                    <View
                        android:id="@+id/divider2"
                        android:layout_width="0dp"
                        android:layout_height="1dp"
                        android:background="@color/teal_light"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/tvRecorrido2Km"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="costo: ??"
                        android:textSize="12sp"
                        android:textColor="@color/gray_hint"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        app:layout_constraintStart_toStartOf="parent"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="combustible: ??"
                        android:textSize="12sp"
                        android:textColor="@color/gray_hint"
                        android:layout_marginTop="8dp"
                        app:layout_constraintTop_toBottomOf="@id/divider2"
                        app:layout_constraintEnd_toEndOf="parent"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </ScrollView>

    <!-- Botón Ver más -->
    <Button
        android:id="@+id/btnVerMas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="+ Ver mas"
        android:textColor="@color/white"
        android:background="@drawable/button_background"
        android:backgroundTint="@null"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginBottom="16dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>